<div id="side" class="col-md-2">
  <h1>Trips Index Page</h1>
  <a id="draw-route" href="#">Draw Route</a>
  <%= link_to "New Trip", @trip, remote: true, id: "new-trip" %>
  <div id='sidebar-new-trip'></div>
  <ul class='list-group'>
    <% @trips.each do |trip| %>
      <li class="list-group-item"><%= link_to trip.title, trip_path(trip) %></li>
    <% end %>
  </ul>
</div>

<div id="map" class="col-md-10">
   <div id="map-canvas"></div>
</div>
